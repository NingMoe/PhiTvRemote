<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F6"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <!-- app icon -->
    <LinearLayout
        android:id="@+id/avatar_area"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/personal_userinfo_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/old_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/about_project_name"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <!-- website -->
        <LinearLayout
            android:id="@+id/visit_website"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website"
                android:textColor="@color/black_normal"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="@string/phicomm_website"
                android:textColor="@color/black_normal"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/right_arrow_blue"
                android:visibility="gone" />
        </LinearLayout>

        <!-- phone -->
        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/dial_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotline"
                android:textColor="@color/black_normal"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="@string/phicomm_hotline"
                android:textColor="@color/black_normal"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/right_arrow_blue"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="@string/copyright_info"
            android:textColor="@color/default_item_hint_color"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>