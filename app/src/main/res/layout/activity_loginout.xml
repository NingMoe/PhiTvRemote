<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginout_core_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/loginout_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.phicomm.widgets.PhiRoundImageView
            android:id="@+id/iv_header_picture"
            android:layout_width="95.5dp"
            android:layout_height="95.5dp"
            android:layout_margin="4dp"
            android:background="@color/transparent"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/personal_login"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/text_size_17sp" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_loginout"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginout_btn_bg_selector"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_19sp" />


    <include layout="@layout/bottom_copyright" />

</LinearLayout>