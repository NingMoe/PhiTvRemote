<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp">

                <ImageButton
                    android:id="@+id/btn_power"
                    android:layout_width="50.5dp"
                    android:layout_height="50.5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:src="@drawable/selector_button_power" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <com.phicomm.remotecontrol.widget.CircleView
                    android:id="@+id/circleView"
                    android:layout_width="218dp"
                    android:layout_height="218dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="75dp"
                android:paddingRight="75dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_back" />

                    <ImageButton
                        android:id="@+id/btn_home"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_home" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/btn_setting"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_setting" />

                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_menu" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageButton
                        android:id="@+id/btn_vol_up"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_plus" />


                    <ImageButton
                        android:id="@+id/btn_vol_down"
                        android:layout_width="44.5dp"
                        android:layout_height="44.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@null"
                        android:src="@drawable/selector_button_minus" />


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>