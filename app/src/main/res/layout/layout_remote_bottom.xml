                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <View
            android:id="@+id/remote_bottom_stance_5"
            style="@style/stance_view"
            android:layout_height="48.0dip"
            android:background="@color/common_global_btn_color" />

        <RelativeLayout
            android:id="@+id/remote_bottom_layout_5"
