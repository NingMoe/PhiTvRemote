<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景效果 -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />

            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/seekbar_color"
                android:centerY="0.75"
                android:endColor="@color/seekbar_color"
                android:startColor="@color/seekbar_color" />
        </shape>
    </item>

    <!-- 当前进度颜色 -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/white_normal"
                    android:centerY="0.75"
                    android:endColor="@color/white_normal"
                    android:startColor="@color/white_normal" />
            </shape>
        </clip>
    </item>

</layer-list>